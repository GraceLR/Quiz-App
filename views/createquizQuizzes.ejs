    <!-- External JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/timeago.js/4.0.2/timeago.min.js"></script>

    <!-- App JS -->
    <script type="text/javascript" src="/scripts/createQuiz.js"></script>
  </head>

  <body>

    <!-- Page-specific (main) content here -->

    <main class="container" id="container">


      <section class="new-question" id="new-question">

        <h2 id="error"></h2>

        <form class="form" id="form" action="/createquiz/quizzes" method="POST">
          <!-- <label for="tweet-text">What are you humming about?</label> -->
          <textarea name="text" id="question-text" placeholder="Please type your question here." rows="3" cols="67"></textarea>
          <!-- answers need to add false true -->
          <textarea name="text" id="answer-text" placeholder="A" rows="1" cols="67"></textarea>
          <textarea name="text" id="answer-text" placeholder="B" rows="1" cols="67"></textarea>
          <textarea name="text" id="answer-text" placeholder="C" rows="1" cols="67"></textarea>
          <div>
            <button type="submit">Add to my quiz</button>
            <!-- <output name="counter" class="counter" id="counter" for="question-text">140</output> -->
          </div>
        </form>

      </section>


      <nav>
        <h4>Catogary:</h4>
      </nav>


      <section class="questions-container" id="questions-container">
      </section>


      <section class="myquiz-container" id="myquiz-container">
        <span>MY QUIZ</span>
      </section>


    </main>
  </body>
</html>
